{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "regenerate-review-factory-models",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "regenerate_models.py",
                "--url",
                "${input:openapiUrl}"
            ],
            "options": {
                "cwd": "backend"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "regenerate-frontend-types",
            "type": "shell",
            "command": "bun",
            "args": [
                "run",
                "openapi-ts"
            ],
            "options": {
                "cwd": "frontend"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "openapiUrl",
            "type": "promptString",
            "description": "Enter the OpenAPI spec URL:",
            "default": "https://review-factory-backend.hackclub.com/openapi.json"
        }
    ]
} 