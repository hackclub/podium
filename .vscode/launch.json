{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "environment",
      "description": "Select environment",
      "type": "pickString",
      "options": [
        {
          "label": "Development",
          "value": "development"
        },
        {
          "label": "Production",
          "value": "production"
        }
      ],
      "default": "development"
    }
  ],
  "configurations": [
    {
      // Not making a seperate config entry since it's not needed much, but to run bun dev in prod mode:
      // MacOS/Linux: NODE_ENV=production bun run dev
      // Windows (powershell): $env:NODE_ENV="production"; bun run dev; $env:NODE_ENV=""
      "command": "bun run dev",
      "name": "frontend",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/frontend"
    },
    // {
    //     "command": "npm run build",
    //     "name": "Run build",
    //     "request": "launch",
    //     "type": "node-terminal",
    //     "cwd": "${workspaceFolder}/frontend"
    // },
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      // --reload seems to cause issues with browser-use
      "args": ["podium.main:app", "--reload"],
      // "args": ["podium.main:app"],
      "env": {
        "ENV_FOR_DYNACONF": "${input:environment}"
      },
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": true
      // "jinja": true
    }
  ],
  "compounds": [
    {
      "name": "dev",
      "configurations": ["frontend", "FastAPI"]
    }
  ]
}
